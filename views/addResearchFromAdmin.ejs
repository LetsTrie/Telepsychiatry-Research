<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/vendorsTop')%>

    <link rel="stylesheet" href="/css/admin.css" />
    <title>Add New Research | Admin Panel</title>
  </head>

  <body>
    <section class="adminTest" style="min-height: 100vh; background: #ebebeb;">
      <header>
        <nav>
          <%- include('./partials/adminNavbar')%>
        </nav>
        <div class="blueDivider">
          <div class="smallText">
            <p><a href="#">Admin Panel</a> / Research</p>
          </div>
          <div class="bigText">
            <p>Add New Research</p>
          </div>
        </div>
      </header>
      <div class="twoBigSectionFlex">
        <div class="oneBigFatCat_wrapper">
          <div class="oneBigFatCat">
            <div class="addResource text-center my-2">
              <h1>Add Research</h1>
            </div>
            <div class="addResource_form">
              <form action="#">
                <input type="hidden" name="filename" id="filename" />
                <div class="one_box">
                  <div class="box_header">
                    <p>Title:</p>
                  </div>
                  <div class="input_box">
                    <input
                      type="text"
                      name="title"
                      id="title"
                      placeholder="Title"
                    />
                  </div>
                </div>
                <div class="one_box">
                  <div class="box_header">
                    <p>Breif Description:</p>
                  </div>
                  <div class="input_box">
                    <textarea name="BriefDesciption" id="BDeditor"> </textarea>
                  </div>
                </div>
                <div class="one_box">
                  <div class="box_header">
                    <p>Key Contact Persons:</p>
                  </div>
                  <div class="keyContactPersonWrapper">
                    <div class="keyContactPerson">
                      <div class="input_box_flx_prnt">
                        <div class="input_box_flx_chld">
                          <input type="text" name="name" placeholder="name" />
                        </div>
                        <div class="input_box_flx_chld">
                          <input
                            type="text"
                            name="designation"
                            placeholder="Designation"
                          />
                        </div>
                        <div class="input_box_flx_chld">
                          <input
                            type="email"
                            name="email"
                            placeholder="Email"
                          />
                        </div>
                        <div class="input_box_flx_chld">
                          <input
                            type="text"
                            name="phoneNumber"
                            placeholder="Phone Number"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="one_box">
                  <div class="box_header">
                    <p>Collaboration: (If any)</p>
                  </div>
                  <div class="input_box">
                    <textarea
                      name="collaboration"
                      id="collaboration"
                      cols="30"
                      rows="3"
                    ></textarea>
                  </div>
                </div>

                <div class="one_box">
                  <div class="box_header">
                    <p>Scope for collaboration:</p>
                  </div>
                  <div class="input_box">
                    <textarea
                      name="collabScope"
                      id="collabScope"
                      cols="30"
                      rows="3"
                    ></textarea>
                  </div>
                </div>

                <div class="one_box">
                  <div class="box_header">
                    <p>Financial Support:</p>
                  </div>
                  <div class="input_box">
                    <textarea
                      name="financialSupport"
                      id="financialSupport"
                      cols="30"
                      rows="3"
                    ></textarea>
                  </div>
                </div>

                <div class="one_box">
                  <div class="box_header">
                    <p>News and Publications:</p>
                  </div>
                  <div class="input_box">
                    <textarea
                      name="newsAndPub"
                      id="newsAndPub"
                      cols="30"
                      rows="3"
                    ></textarea>
                  </div>
                </div>

                <div class="one_box">
                  <div class="box_header">
                    <p>Research Stage</p>
                  </div>
                  <div class="input_box slct_picker">
                    <div class="form-selectpicker">
                      <select
                        id="researchStageID"
                        class="selectpicker researchStage-selector"
                        data-width="100%"
                        title="Select research stage"
                        data-size="6"
                        name="researchStage"
                      >
                        <option value="ongoing">On going</option>
                        <option value="completed">Completed</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="one_box">
                  <div class="box_header">
                    <p>Representational Photo</p>
                  </div>
                  <div class="input_box">
                    <input
                      type="file"
                      name="researchFile"
                      id="repPhotoID"
                      accept="image/x-png,image/jpg,image/jpeg"
                    />
                  </div>
                </div>

                <div class="createResources__submit">
                  <button id="form-submit">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include('./partials/footer')%>
  </body>
  <%- include('./partials/vendorsBottom')%>
  <script src="https://cdn.ckeditor.com/ckeditor5/15.0.0/classic/ckeditor.js"></script>
  <script
    src="https://code.jquery.com/jquery-3.4.1.js"
    integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"
  ></script>
  <script>
    let bdeditor;

    ClassicEditor.create(document.querySelector('#BDeditor'))
      .then((editor) => {
        bdeditor = editor;
        console.log(editor);
      })
      .catch((error) => {
        console.error(error);
      });
  </script>
</html>
