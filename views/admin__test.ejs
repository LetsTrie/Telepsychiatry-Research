<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/vendorsTop')%>

        <link rel="stylesheet" href="/css/admin.css" />
        <title>Document</title>
</head>

<body>
    <form action="/admin/test" method="GET">
        <section class="adminDashboard" style="min-height: 100vh;">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="#">TRIN</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <div style="margin: auto;"></div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Doctor</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Test</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container">
                <section class="healthTest m-5 p-3 border border-primary">
                    <div class="healthTest__heading text-center pb-3">
                        <h1>Mental Health Test</h1>
                    </div>
                    <div class="healthTest__add_test text-right">
                        <button class="btn btn-dark px-4 py-2" id="add-new">
                <strong>Add Test</strong>
              </button>
                    </div>
                    <div class="healthTest__searching px-3">
                        <div class="row">
                            <div class="inputbox col-sm">
                                <div class="form-selectpicker">
                                    <select class="selectpicker" data-width="100%" title="Select Disorder" name="disorder" id="disorderInput" data-size="6">
                      <option value="trauma">trauma</option>
                      <option value="bipolar">bipolar</option>
                      <option value="anxiety">anxiety</option>
                    </select>
                                </div>
                            </div>
                            <div class="inputbox col-sm">
                                <div class="form-selectpicker">
                                    <select class="selectpicker" data-width="100%" title="Select Test" name="test" id="testInput" data-size="6">
                      <option value="trauma-1">trauma-1</option>
                      <option value="trauma-2">trauma-2</option>
                      <option value="bipolar-1">bipolar-1</option>
                    </select>
                                </div>
                            </div>

                            <div class="inputbox col-sm">
                                <div class="form-selectpicker">
                                    <select class="selectpicker" data-width="100%" title="Paid or not" name="paid" id="testInput" data-size="6">
                      <option value="Yes">Yes</option>
                      <option value="No">No</option>
                    </select>
                                </div>
                            </div>
                            <div class="inputbox col-sm">
                                <button type="submit" class="btn btn-success">Search</button>
                            </div>
                        </div>
                    </div>
                    <div class="healthTest_allDisorders py-5">
                        <% for(let i = 0 ; i < tests.length; i++) { %>
                            <div class="eachDisorder py-3">
                                <div class="eachDisorder_heading">
                                    <h6>
                                        <%= tests[i].disorderName %>
                                    </h6>
                                </div>
                                <div class="eachDisorder_eachTest">
                                    <% for(let j = 0 ; j < tests[i].relatedTests.length; j++) { %>
                                        <a href="#" style="text-decoration: underline;">
                                            <%= tests[i].relatedTests[j].testEng %>
                                        </a>,
                                        <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </section>
            </div>
        </section>
        <%- include('./partials/footer')%>
    </form>
</body>
<%- include('./partials/vendorsBottom')%>
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script>
        $('#add-new').click((e) => {
            e.preventDefault();
            location = '/admin/test/new';
        });
    </script>

</html>