<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/vendorsTop')%>

    <link rel="stylesheet" href="/css/admin.css" />
    <title>Document</title>
  </head>
  <body>
    <section class="adminDashboard" style="min-height: 100vh;">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">TRIN</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <div style="margin: auto;"></div>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#">Doctor</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">Test</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="container">
        <section class="healthTest m-5 p-3 border border-primary">
          <div class="healthTest__heading text-center pb-3">
            <h1>Mental Health Test</h1>
          </div>
          <div class="healthTest__add_test text-right">
            <button class="btn btn-dark px-4 py-2" onclick="go()">
              <strong>Add Test</strong>
            </button>
          </div>
          <div class="healthTest__searching px-3">
            <div class="row">
              <div class="inputbox col-sm">
                <div class="form-selectpicker">
                  <select
                    class="selectpicker"
                    data-width="100%"
                    title="Select Disorder"
                    name="disorder"
                    id="disorderInput"
                    data-size="6"
                  >
                    <option value="x">x</option>
                    <option value="x">x</option>
                    <option value="x">x</option>
                  </select>
                </div>
              </div>
              <div class="inputbox col-sm">
                <div class="form-selectpicker">
                  <select
                    class="selectpicker"
                    data-width="100%"
                    title="Select Test"
                    name="test"
                    id="testInput"
                    data-size="6"
                  >
                    <option value="x">x</option>
                    <option value="x">x</option>
                    <option value="x">x</option>
                  </select>
                </div>
              </div>
              <div class="inputbox col-sm">
                <button type="submit" class="btn btn-success">Search</button>
              </div>
            </div>
          </div>
          <div class="healthTest_allDisorders py-5">
            <% for(let i = 0 ; i < 10; i++) { %>
            <div class="eachDisorder py-3">
              <div class="eachDisorder_heading">
                <h6>Depression</h6>
              </div>
              <div class="eachDisorder_eachTest">
                <% for(let j = 0 ; j < 10; j++) { %>
                <a href="#" style="text-decoration: underline;">
                  test<%= j+1 %> </a
                >, <% } %>
              </div>
            </div>
            <% } %>
          </div>
        </section>
      </div>
    </section>
    <%- include('./partials/footer')%>
  </body>
  <%- include('./partials/vendorsBottom')%>
  <script>
    function go() {
      location = '/admin/test/new';
    }
  </script>
</html>
