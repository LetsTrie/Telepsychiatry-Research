<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/vendorsTop')%>
    <link rel="stylesheet" href="/css/contactUs.css" />
    <title>Contact Us | Telepsychiatry Research</title>
  </head>

  <body>
    <div style="min-height: 100vh;">
      <header>
        <nav class="cnav">
          <%- include('./partials/navbar')%>
        </nav>
        <div class="my-3 divider"></div>
      </header>

      <div class="contactUs">
        <div class="container">
          <div class="wrapper">
            <div class="contactUs_header text-center">
              <p>Contact Us</p>
            </div>
            <div class="contactUs_form">
              <div class="alert alert-danger" id="alert"></div>
              <form id="form" action="/contactUs" method="POST">
                <% if(successMessage != ''){ %>
                <div class="alert alert-success" role="alert">
                  <%= successMessage %>
                </div>
                <% } %>
                <div class="flex-parentt">
                  <div class="flex-childd">
                    <p>Name :</p>
                    <input id="name" type="text" required name="name" />
                  </div>

                  <div class="flex-childd">
                    <p>Email :</p>
                    <input id="email" type="email" required name="email" />
                  </div>
                </div>
                <div class="messagee">
                  <p>Your message :</p>
                  <textarea
                    required
                    id="message"
                    name="message"
                    id="message"
                    cols="30"
                    rows="10"
                  ></textarea>
                </div>
                <div class="submit">
                  <button id="submit-btn">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer')%>
  </body>

  <%- include('./partials/vendorsBottom')%>
  <script src="/js/contactUs.js"></script>
</html>
