<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/vendorsTop')%>
    <link rel="stylesheet" href="/css/doctorProfile.css" />

    <title>Profile | Expert | Telepsychiatry Research</title>
  </head>

  <body>
    <section>
      <nav>
        <%- include('./partials/navbar')%>
      </nav>
      <div class="blueDivider">
        <div class="smallText">
          <p><a href="/">Expert</a> / profile</p>
        </div>
        <div class="bigText">
          <p><%=user.name%></p>
        </div>
      </div>

      <section class="py-5 mt-1 docProWrapper">
        <div class="container">
          <div class="doctor_identity">
            <div class="his_photo">
              <img src="/uploads/<%=user.propicURL%>" alt="Doctor" />
            </div>
            <div class="His_profession">
              <p class="name">
                <%= user.name %>
              </p>
              <p class="degreeNspeciality">
                <%= user.education[0].degree %> in <%= user.education[0].field
                %>
              </p>

              <p class="expertize">
                <span class="fa fa-user-md">&nbsp;&nbsp;</span>
                Experts in <%= user.expertise %>
              </p>
              <p class="aff">
                <span class="fa fa-user">&nbsp;&nbsp;</span>
                <%= user.designation %>
              </p>
              <p class="college">
                <span class="fa fa-university">&nbsp;</span>
                <%= user.affiliation %>
              </p>

              <div class="bookingg">
                <button id="update-btn">
                  Update Profile
                </button>
              </div>
            </div>
          </div>

          <div class="aboutDoctor_wrapper">
            <div class="card card-tabs-2 aboutDoctor">
              <div class="card-header">
                <ul class="nav nav-tabs">
                  <li class="nav-item">
                    <a
                      class="nav-link active"
                      id="overview"
                      data-toggle="tab"
                      href="#tab1"
                      role="tab"
                      >Overview</a
                    >
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link"
                      id="training"
                      data-toggle="tab"
                      href="#tab2"
                      role="tab"
                      >Training and Experiences</a
                    >
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link"
                      id="awards"
                      data-toggle="tab"
                      href="#tab3"
                      role="tab"
                      >Awards</a
                    >
                  </li>
                  <!-- <li class="nav-item">
                    <a
                      class="nav-link"
                      id="cv"
                      data-toggle="tab"
                      href="#tab4"
                      role="tab"
                      >Visiting Hours</a
                    >
                  </li> -->
                </ul>
              </div>
              <div class="card-block box">
                <div class="tab-content">
                  <div class="tab-pane active" id="tab1">
                    <div class="card-text">
                      <div class="overview_aboutMe" id="overview-pane">
                        <div class="aboutMe">
                          <p class="overview_aboutMe_header">About me</p>
                          <p class="overview_aboutMe_info">
                            <%=user.aboutYourself%>
                          </p>
                        </div>
                        <div class="overview_education" id="education-pane12">
                          <div class="widget education-widget">
                            <h4 class="widget-title">Education</h4>
                            <div class="experience-box">
                              <ul class="experience-list">
                                <% for(let ii = 0 ; ii < user.education.length;
                                ii++) { %>
                                <li>
                                  <div class="experience-user">
                                    <div class="before-circle"></div>
                                  </div>
                                  <div class="experience-content">
                                    <div class="timeline-content">
                                      <a href="#/" class="name"
                                        ><%=user.education[ii].eduInstitute%></a
                                      >
                                      <div>
                                        <%=user.education[ii].degree%> in
                                        <%=user.education[ii].field%>
                                      </div>
                                      <span class="time">
                                        <%=user.education[ii].passingYear%>
                                      </span>
                                    </div>
                                  </div>
                                </li>
                                <% } %>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="tab2">
                    <div class="overview_education" id="WorkNexp">
                      <div class="widget education-widget">
                        <h4 class="widget-title">Work & Experience</h4>
                        <% if(!user.workExperience || user.workExperience.length
                        === 0) { %>
                        <p class="m-5"></p>
                        <% } else { %>
                        <div class="experience-box">
                          <ul class="experience-list">
                            <% for(let ii = 0 ; ii < user.workExperience.length;
                            ii++) { %>
                            <li>
                              <div class="experience-user">
                                <div class="before-circle"></div>
                              </div>
                              <div class="experience-content">
                                <div class="timeline-content">
                                  <a href="#/" class="name"
                                    ><%= user.workExperience[ii].expInstitute
                                    %></a
                                  >
                                  <span class="time"
                                    ><%=user.workExperience[ii].expFrom%></span
                                  >
                                </div>
                              </div>
                            </li>
                            <% } %>
                          </ul>
                        </div>
                        <% } %>
                      </div>
                    </div>
                    <div class="overview_education" id="education-pane31">
                      <div class="widget education-widget">
                        <h4 class="widget-title">Professional Training</h4>
                        <% if(!user.training || user.training.length === 0) { %>
                        <p class="m-5"></p>
                        <% } else { %>
                        <div class="experience-box">
                          <ul class="experience-list ProTraining">
                            <% for(let ii = 0 ; ii < user.training.length; ii++)
                            { %>
                            <li>
                              <div class="experience-user">
                                <div class="before-circle"></div>
                              </div>
                              <div class="experience-content">
                                <div class="timeline-content">
                                  <a href="#/" class="name">
                                    <%= user.training[ii].trainingName %></a
                                  >
                                  <span class="time">
                                    <%= user.training[ii].trainingYear %></span
                                  >
                                  <div>
                                    <p class="someText">
                                      <%= user.training[ii].trainingDetails %>
                                    </p>
                                  </div>
                                </div>
                              </div>
                            </li>
                            <% } %>
                          </ul>
                        </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="tab3">
                    <div class="overview_education" id="awardss-pane">
                      <div class="widget education-widget">
                        <h4 class="widget-title">Awards</h4>
                        <% if(!user.awards || user.awards.length === 0) { %>
                        <p class="m-5"></p>
                        <% } else { %>
                        <div class="experience-box">
                          <ul class="experience-list">
                            <% for(let ii = 0 ; ii < user.awards.length; ii++) {
                            %>
                            <li>
                              <div class="experience-user">
                                <div class="before-circle"></div>
                              </div>
                              <div class="experience-content awardsTab">
                                <div class="timeline-content">
                                  <span class="coloredTime"
                                    ><p>
                                      <%= user.awards[ii].awardsYear%>
                                    </p></span
                                  >
                                  <a href="#/" class="name"
                                    ><%= user.awards[ii].awardsName%></a
                                  >
                                  <div>
                                    <p class="someText">
                                      <%= user.awards[ii].awardsDetails%>
                                    </p>
                                  </div>
                                </div>
                              </div>
                            </li>
                            <% } %>
                          </ul>
                        </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="tab4">
                    <div class="card-text busiHour">
                      <%for(let i = 0 ; i < 2 ; i++) { %>
                      <div class="locationTimeMoney">
                        <div class="location">
                          <p class="ins_nam">Smile Dental Care</p>
                          <p class="ins_loc">450/A Shewrapara, Mirpur, Dhaka</p>
                          <p class="ins_dir">
                            <a
                              href="https://goo.gl/maps/y7ueXKkTSEQz8DvY8"
                              target="_blank"
                              >Get Directions</a
                            >
                          </p>
                        </div>
                        <div class="timee">
                          <div class="time_each">
                            <p class="dayy">Mon-Sat</p>
                            <p class="tmm">10:00AM-2:00PM</p>
                            <p class="tmm">4:00PM-9:00PM</p>
                          </div>
                          <div class="time_each">
                            <p class="dayy">Sun</p>
                            <p class="tmm">10:00AM-2:00PM</p>
                          </div>
                        </div>
                      </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </section>

    <%- include('./partials/vendorsBottom')%> <%- include('./partials/footer')%>
    <script>
      $('#update-btn').click((e) => {
        location = '/auth/update/exp/profile';
      });
    </script>
  </body>
</html>
