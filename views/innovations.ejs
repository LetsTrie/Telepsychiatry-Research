<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/vendorsTop')%>
    <link rel="stylesheet" href="/css/innovations.css" />

    <title>Innovations | Telepsychiatry Research</title>
  </head>

  <body>
    <section class="wrapper">
      <nav>
        <%- include('./partials/navbar')%>
      </nav>
      <div class="my-3 divider"></div>

      <div class="addInnovations container my-5">
        <div class="innovationsHeading">
          <p>Innovations</p>
        </div>
        <div class="submitInnovations">
          <button>Submit Innovations</button>
        </div>
      </div>

      <div class="searching">
        <form action="/innovations" method="GET">
          <div class="searchbox">
            <% if(search) { %>
            <input type="text" name="search" value="<%=search%>" required />
            <% } else { %>
            <input type="text" name="search" required />
            <% } %>
          </div>
          <div class="searchBtn">
            <input type="submit" value="search" />
          </div>
        </form>
      </div>

      <div class="allInnovations container">
        <% for (let singleData of data) { %>
        <a href="/innovations/<%= singleData._id %>">
          <div
            class="m-1 mb-5 eachCard"
            data-aos="zoom-in-up"
            data-aos-duration="1000"
          >
            <img src="/images/res1.jpg" class="card-img-top" />
            <div class="card-body">
              <h5 class="card-title InnvationTitle">
                <%= singleData.title %>
              </h5>
              <p class="card-text">
                <%- singleData.BriefDesciption %>
              </p>
            </div>
          </div>
        </a>
        <% } %>
      </div>

      <%- include('./partials/pagination.ejs') %>
    </section>
    <%- include('./partials/footer')%>
  </body>
  <%- include('./partials/vendorsBottom')%>
  <script>
    $('.submitInnovations').on('click', e => {
      window.location = '/innovations/newInnovation';
    });
  </script>
</html>
