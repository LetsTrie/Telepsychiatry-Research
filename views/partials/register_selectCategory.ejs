<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function() {
        $('input:checkbox').click(function() {
            $('input:checkbox').not(this).prop('checked', false);
        });

        $('#continue-btn').click((e) => {
            const gen = $('#gen').is(':checked')
            const exp = $('#exp').is(':checked')
            const org = $('#org').is(':checked')

            if (gen) {
                console.log('gen')
                window.location = "/auth/register/new/gen"
            } else if (exp) {
                console.log('exp')
                window.location = "/auth/register/new/exp"
            } else if (org) {
                console.log('org')
                window.location = "/auth/register/new/org"
            }
        })
    });
</script>