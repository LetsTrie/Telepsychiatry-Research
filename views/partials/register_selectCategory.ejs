<div class="modal fade" id="SELECT_CATEGORY_MODAL">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Register User</h2>
                <button type="button" class="close" data-dismiss="modal">Ã—</button>
            </div>

            <div class="modal-body">
                <div class="SELECT_CATEGORY_MODAL_wrapper">
                    <p class="head">Select a category and press continue</p>
                    <form>
                        <input type="checkbox" id="gen" value="gen" />
                        <label for="gen">General User</label>
                        <input type="checkbox" id="exp" value="exp" />
                        <label for="exp">Expert User</label>
                        <input type="checkbox" id="org" value="org" />
                        <label for="org">Organization</label>
                    </form>
                </div>
            </div>

            <div class="modal-footer submit">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
                <button type="button" class="red-btn" id="continue-btn">
          Continue
        </button>
            </div>
        </div>
    </div>
</div>

