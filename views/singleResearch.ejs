<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/vendorsTop')%>

    <link rel="stylesheet" href="/css/admin.css" />
    <title>Research</title>
  </head>

  <body>
    <section class="adminTest" style="min-height: 100vh; background: #ebebeb;">
      <header>
        <nav>
          <%- include('./partials/navbar.ejs')%>
        </nav>
        <div class="blueDivider">
          <div class="smallText">
            <p>Home/Research</p>
          </div>
          <div class="bigText">
            <p>
              <%= data.title %>
            </p>
          </div>
        </div>
      </header>
      <div class="twoBigSectionFlex">
        <div class="oneBigFatCat_wrapper">
          <div class="oneBigFatCat">
            <% if(user && user._id.toString().trim() ===
            data.authorID.toString().trim()) { %>
            <div class="updateBtn text-right">
              <button id="<%= data._id %>" class="btn btn-success btn-lg px-4">
                Update
              </button>
            </div>
            <% } %>
            <div class="contentTitle">
              <p>
                <%= data.title %>
              </p>
            </div>
            <div class="contentDescription">
              <p>
                <%- data.description %>
              </p>
            </div>
            <% if (data.collaboration) { %>
            <div class="content_box">
              <div class="content_box_header">
                <p>Collaboration</p>
              </div>
              <div class="content_box_details">
                <p>
                  <%= data.collaboration %>
                </p>
              </div>
            </div>
            <% } %>
            <div class="content_box">
              <div class="content_box_header">
                <p>Financial support and grant</p>
              </div>
              <div class="content_box_details">
                <p>
                  <%= data.financialSupport %>
                </p>
              </div>
            </div>

            <div class="content_box">
              <div class="content_box_header">
                <p>Scope of Collaboration</p>
              </div>
              <div class="content_box_details">
                <p>
                  <%= data.collabScope %>
                </p>
              </div>
            </div>

            <div class="content_box">
              <div class="content_box_header">
                <p>News and Publication</p>
              </div>
              <div class="content_box_details">
                <p>
                  <%= data.newsAndPub %>
                </p>
              </div>
            </div>

            <div class="content_box">
              <div class="content_box_header">
                <p>Key Contact Persons</p>
              </div>
              <div class="content_box_details">
                <p>
                  <%= data.name %> <br />
                  <%= data.designation %>, <br />
                  <%= data.email %> <br />
                  <%= data.phone %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include('./partials/footer')%>
  </body>
  <%- include('./partials/vendorsBottom')%>
  <script>
    $('button').click((e) => {
      const id = e.target.id;
      location = '/admin/research/update/' + id;
    });
    $('.additionalFileName').click((e) => {
      location = '/researches/download/' + $('#file-link').val();
    });
    $('.updateBtn button').click((e) => {
      location = '/researches/update/' + e.target.id;
    });
  </script>
</html>
