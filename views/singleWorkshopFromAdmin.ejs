<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/vendorsTop')%>
    <link rel="stylesheet" href="/css/single-workshop.css" />
    <title>Add New Workshop | Admin Panel</title>
</head>

<body>
    <section class="adminTest" style="min-height: 100vh; background: #ebebeb;">
        <header>
            <nav>
                <%- include('./partials/adminNavbar.ejs')%>
            </nav>
            <div class="blueDivider">
                <div class="smallText">
                    <p><a href="#">Events</a>/Workshops/Single</p>
                </div>
                <div class="bigText">
                    <p>Single Workshop</p>
                </div>
            </div>
        </header>
        <div class="cover-image">
            <p>
                <%= data.title %>
            </p>
        </div>
        <div class="updateBtn text-right">
            <p style="text-align: center; margin-top: 20px;">
                <button class="btn btn-secondary" data-toggle="modal" data-target="#parts"
                    style="font-size: 18px; padding: 10px;">
                    Show All Participents
                </button>
                <button id="<%= data._id %>" class="btn btn-success btn-lg px-4">
                    Update
                </button>
                <button id="<%= data._id %>" name="delete" class="btn delete btn-lg px-4"
                    style="background-color: red; border: none; color: #fff;">Delete</button>
            </p>
            <p style="text-align: center; color: red;">NB: Delete button permanently deletes the resource without any
                warning. Please take care.</p>
        </div>
        <div class="contentWrapper">
            <div class="left">
                <div class="body">
                    <strong class="header" style="font-size: 25px; color: #008ecc;">
                        About
                    </strong>
                    <%- data.about %>
                </div>
                <div class="body">
                    <strong class="header" style="font-size: 25px; color: #008ecc;">
                        Videos
                    </strong>
                    <div class="videos">
                        <% for(let i=0; i<data.videos.length; i++) { %>
                        <div class="video">
                            <iframe width="300" height="200" src="<%= data.videos[i] %>" frameborder="0"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="body" style="margin-top: 20px;">
                    <strong class="header" style="font-size: 25px; color: #008ecc;">
                        Description
                    </strong>
                    <%- data.description %>
                </div>

                <div class="body">
                    <strong class="header" style="font-size: 25px; color: #008ecc;">
                        Resource Persons
                    </strong>
                    <div class="specialServiceDoctors">

                        <% for(let i = 0 ; i < ourExperts.length; i++) { %>
                        <div class="eachDoctor">
                            <div class="es_img">
                                <img src="/images/experts/<%=ourExperts[i].url%>.jpg" alt="" />
                            </div>
                            <div class="es_name">
                                <p><%=ourExperts[i].name%></p>
                                <p>
                                    <span><%=ourExperts[i].designation%></span>
                                </p>
                            </div>
                        </div>
                        <% } %>

                    </div>
                </div>

            </div>
            <div class="right">
                <div class="contents">
                    <div class="item">
                        <div class="heading">
                            <i class="fa fa-volume-up"></i>To speak to someone
                        </div>

                        <div class="con">+8801552-525252</div>
                        <div class="con">info@trin-innovation.com</div>
                    </div>
                    <div class="item">
                        <div class="heading">
                            <i class="fa fa-map-marker"></i>Location
                        </div>
                        <div class="con">
                            <%= data.location %>
                        </div>
                    </div>
                    <div class="item">
                        <div class="heading">
                            <i class="fa fa-clock-o"></i>Event Timing
                        </div>
                        <div class="con">
                            Time:
                            <%= data.schedule.startTime %> to
                            <%=
                data.schedule.endTime %>
                        </div>
                        <div class="con">
                            Date:
                            <%= data.schedule.startDate %> to
                            <%=
                data.schedule.endDate %>
                        </div>
                    </div>

                </div>

                <div class="flx-chld-feeds">
                    <div class="feedback-Heading">
                        <p>User Feedback</p>
                    </div>
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <% for (let i=0; i<4; i++) { %>
                            <%if(i==0) {%>
                            <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>" class="active"></li>
                            <%}else{%>
                            <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>" </li>
                                <%}%>
                        <%}%>
                        </ol>
                        <div class="carousel-inner">
                            <% for (let i=0; i<4; i++) { %>
                                <%if(i==0) {%>
                                <div class="carousel-item active">
                                    <div class="single-feedback">
                                        <% if (comments[i].video != 'none') { %>
                                        <video width="320" height="240" controls>
                                            <source src="/workshop/videos/<%=comments[i].video %>" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                        <% } %>
                                        <div class="txt-cmnt">
                                            <p>"<%= comments[i].text %>"</p>
                                            <p>-<%= comments[i].userName %></p>
                                        </div>
                                    </div>
                                </div>
                                <%}else{%>
                                <div class="carousel-item">
                                    <div class="single-feedback">
                                        <% if (comments[i].video != 'none') { %>
                                        <video width="320" height="240" controls>
                                            <source src="/workshop/videos/<%=comments[i].video %>" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                        <% } %>
                                        <div class="txt-cmnt">
                                            <p><%= comments[i].text %></p>
                                            <p>-<%= comments[i].userName %></p>
                                        </div>
                                    </div>
                                </div>
                                <%}%>
                            <!-- <%if(i==0) {%>
                            <div class="carousel-item active">
                                <div class="single-feedback">
                                    <iframe src="https://www.youtube.com/embed/FTU0Yi-_dGM" frameborder="0"
                                        allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe>
                                    <div class="txt-cmnt">
                                        <p>"It was an informative workshop"</p>
                                        <p>-MD Rofikul Kholil</p>
                                    </div>
                                </div>
                            </div>
                            <%}else{%>
                            <div class="carousel-item">
                                <div class="single-feedback">
                                    <iframe src="https://www.youtube.com/embed/FTU0Yi-_dGM" frameborder="0"
                                        allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe>
                                    <div class="txt-cmnt">
                                        <p>"It was an informative workshop"</p>
                                        <p>-MD Rofikul Kholil</p>
                                    </div>
                                </div>
                            </div>
                            <%}%>                    -->
                        <% } %>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- <div class="mobile-reg">
            <p><button>Register</button></p>
        </div> -->
        <div class="lower">
            <div class="lower-cover">
                <div class="contents">
                    <div class="texts">
                        <div class="heading">Some random heading</div>
                        <div class="body">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusantium, nulla recusandae
                            tempore reprehenderit unde eius. In quae odio ad voluptas dolorem earum placeat ducimus
                            sapiente! Incidunt deserunt itaque fugit explicabo.
                        </div>
                        <div class="reg-btn">
                            <div class=""></div>
                            <!-- <button>Register</button> -->
                        </div>
                    </div>
                    <div class=""></div>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade" id="parts" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalScrollableTitle">
                        All Participents
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="parts">
                        <% for (let i=0; i<parts.length; i++) { %>
                        <div class="each-part">
                            <a href="/services/doctor/profile/<%=parts[i].user_id%>"> <i class="fa fa-user"></i>
                                <%= parts[i].user_name %>
                            </a>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer')%>
</body>
<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
