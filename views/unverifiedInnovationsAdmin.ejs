<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/vendorsTop')%>

        <link rel="stylesheet" href="/css/admin.css" />
        <title>Unverified Innovations | Admin Panel</title>
</head>

<body>
    <section class="adminTest" style="min-height: 100vh; background: #ebebeb;">
        <header>
            <nav>
                <%- include('./partials/adminNavbar')%>
            </nav>
            <div class="blueDivider">
                <div class="smallText">
                    <p><a href="#">Admin Panel</a> / Innovations</p>
                </div>
                <div class="bigText">
                    <p>Innovations</p>
                </div>
            </div>
        </header>
        <div class="twoBigSectionFlex">
            <div class="eachBigSection">
                <div class="imageee py-2 pb-4">
                    <img src="/images/scientists-working-concept_23-2148497600.jpg" alt="" />
                </div>
                <div class="addNewTestBtn" style="padding: 0px;">
                    <button class="addNewResearch">Add New Innovation</button>
                </div>
                <br />
                <div class="addNewTestBtn" style="padding: 0px;">
                    <button class="addNewResearch" id="verified">
              Verified Innovations
            </button>
                </div>
            </div>
            <div class="eachBigSection">
                <div class="all_resources_wrapper">
                    <div class="resources_title text-center pt-4 pb-2">
                        <h1>Our Innovations</h1>
                    </div>

                    <div class="all_researchers">
                        <% for(let i = 0 ; i < data.length; i++) { %>
                            <div class="each_researchers">
                                <div class="flx-prnt">
                                    <div class="flx-chld">
                                        <div class="each_researchers_img">
                                            <img src="/innovation/<%= data[i].file %>" id="<%= data[i]._id %>" alt="image" class="goToDetailsPage" />
                                        </div>
                                    </div>
                                    <div class="flx-chld">
                                        <div class="each_researchers_heading">
                                            <h4 class="goToDetailsPage" id="<%= data[i]._id %>">
                                                <%= data[i].title %>
                                            </h4>
                                        </div>
                                        <div class="each_researchers_desc">
                                            <p>
                                                <%- data[i].description %>
                                            </p>
                                        </div>
                                        <div class="each_researchers_btn">
                                            <button class="goToDetailsPage" id="<%= data[i]._id %>">
                        READ MORE
                      </button>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('./partials/footer')%>
</body>
<%- include('./partials/vendorsBottom')%>

    <script>
        $('.goToDetailsPage').on('click', (e) => {
            const id = e.target.id;
            location = '/admin/innovation/' + id;
        });
        $('.addNewResearch').on('click', (e) => {
            location = '/admin/innovation/new';
        });
        $('#verified').on('click', (e) => {
            location = '/admin/innovations/';
        });
    </script>

</html>