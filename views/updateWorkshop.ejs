<script>
  $('input[name="date"]').datepicker();
  $('input[name="time"]').timepicker();

  // let bdeditor;

  // ClassicEditor.create(document.querySelector('#BDeditor'))
  //     .then((editor) => {
  //         bdeditor = editor;
  //         console.log(editor);
  //     })
  //     .catch((error) => {
