  var config = {
    height: 600,
    width: 900,
    extraPlugins: 'embed,autoembed,image2',
    contentsCss: [
      'http://cdn.ckeditor.com/4.14.0/full-all/contents.css',
      'https://ckeditor.com/docs/vendors/4.14.0/ckeditor/assets/css/widgetstyles.css',
    ],
    embed_provider:
